---
import '@fontsource-variable/inter';
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'Rubik';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(88 88 88);
    --aw-color-secondary: rgb(12 125 247);
    --aw-color-accent: rgb(247 181 12);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(43 43 43);
    --aw-color-bg-page: rgb(255 255 255);
    --aw-color-bg-page2: rgb(238, 236, 237);
    --aw-color-bg-page-dark: rgb(88, 88, 88);
    --aw-color-bg-page2-dark: rgb(43, 43, 43);
    --aw-color-cities: #020202;

    ::selection {
      background-color: peachpuff;
    }
  }

  .dark {
    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-secondary: rgb(247 181 12);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);
    --aw-color-bg-page2: var(--aw-color-bg-page2-dark);
    --aw-color-cities: white;

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
